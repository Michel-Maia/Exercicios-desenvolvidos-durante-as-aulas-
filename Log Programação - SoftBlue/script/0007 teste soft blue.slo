início {
    inteiro: idade;
    leia ("Idade" , idade);
   caractere: categoria;
   
   se (idade < 0 ) { 
   categoria = "Idade invalida";
   } senão se (idade < 13 ) {
        categoria = " Criança";
        } senão se (idade < 18) {
            categoria = "Adoleceste";
        } senão {
            categoria = "Adulto";
        }
        
        escreva (categoria);
        
}